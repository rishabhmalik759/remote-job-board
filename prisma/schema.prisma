datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
model Company{
  id String @id @default(uuid())
  companyName String @unique
  jobPosts JobPost[]
}

model JobPost {
  id        String     @id @default(uuid())
  title     String
  content   String?
  published Boolean @default(false)
  company    Company?   @relation(fields: [companyId], references: [id])
  companyId  String?
  position    String
  positionType String
  primaryTag   String
  tags String[]
  jobLocation String
  showCompanyLogo Boolean @default(false)
  emailToCandidates Boolean @default(false)
  getMatches Boolean @default(false)
  highlightPost Boolean @default(false)
  stickForDuration Int
  jobPostDuration Int
  createdOn     DateTime     @default(now())
  invoice Invoice?
  jobDetails JobDetails?
}

model Invoice{
  id     String     @id @default(uuid())
  jobPost JobPost @relation(fields:[jobPostId],references:[id])
  jobPostId String
  companyInvoiceEmail String
  emailListToSendInvoice String
  invoiceAddress String
  invoiceNotesPurchaseOrder String
  payLater Boolean @default(false)
}


model JobDetails{
  id     String     @id @default(uuid())
  jobPost JobPost  @relation(fields: [jobPostId],references:  [id])
  jobPostId String
  companyLogo String
  highlightWithCompanyColor Boolean @default(false)
  minAnnualSalary Int
  maxAnnualSalary Int
  jobDescription JobDescription?
  howToApply  HowToApply?
  applyURL String
  applyEmail  String
}

model JobDescription{
  id     String     @id @default(uuid())
  jobDetails JobDetails  @relation(fields: [jobDetailsId],references:  [id])
  jobDetailsId String
  text  String
  html String
}

model HowToApply{
  id     String     @id @default(uuid())
  jobDetails JobDetails  @relation(fields: [jobDetailsId],references:  [id])
  jobDetailsId String
  text String
  html String
}